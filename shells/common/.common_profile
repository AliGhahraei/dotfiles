#!/bin/sh

# shellcheck disable=SC2155
export PLATFORM_TYPE="$(uname)"

# (Git) Projects
export PROJECTS_PATH="$HOME/g"

# Platform specific
if [ "$PLATFORM_TYPE" = "Linux" ]; then
    # shellcheck source=/dev/null
    . "$HOME/.linux_profile"
elif [ "$PLATFORM_TYPE" = "Darwin" ]; then
    # shellcheck source=/dev/null
    . "$HOME.macos_profile"
    # shellcheck source=/dev/null
    [ -f "$HOME/.work_profile" ] && . "$HOME/.work_profile"
fi


# Pelican
export PY='python3' # Looks like it needs dis
export PELICAN_THEMES_PATH="$PROJECTS_PATH/pelican-themes"
export PELICAN_PLUGINS_PATH="$PROJECTS_PATH/pelican-plugins"

# Misc.
export VISUAL="nvim"
export PATH="$HOME/.local/bin:$HOME/.poetry/bin:$HOME/.emacs.d/bin:$PATH"
export VIRTUAL_ENV_DISABLE_PROMPT=1
